<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <include file="struts-default.xml"/>
    <constant name="struts.objectFactory" value="spring"/>
    <constant name="struts.action.extension" value="do"/>
    <constant name="struts.locale" value="zh_CN"/>
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <constant name="struts.devMode" value="true"/>

    <package name="default" extends="struts-default">
        <default-interceptor-ref name="paramsPrepareParamsStack"/>
    </package>
    <include file="struts2/security.xml"/>
    <include file="struts2/affice.xml"/>
    <include file="struts2/employee.xml"/>
    <include file="struts2/bumf.xml"/>
    <include file="struts2/department.xml"/>
    <include file="struts2/job.xml"/>
    <include file="struts2/state.xml"/>
    <include file="struts2/message.xml"/>
    <include file="struts2/signState.xml"/>
    <include file="struts2/sign.xml"/>
</struts>
